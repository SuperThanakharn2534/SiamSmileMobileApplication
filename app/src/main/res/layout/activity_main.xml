<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/background_light"
    app:layout_gravity="center_vertical"
    tools:context="com.alignsolution.siamsmilemobileapplication.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="747dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="1264dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="200dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/siamsmilecard_logo"
            tools:ignore="ContentDescription,InefficientWeight,MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="270dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
